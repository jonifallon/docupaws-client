
<h1 id="pets_list">My Pets</h1>
<br><br><br>

{{#if pets}}

{{#each pets as |pet|}}
   <tr class="item">
     <td valign="top" class="textContent">
       <!-- <img src=""{{img}}" width="50" height="75" class="itemImage"" /> -->
       <h3 class="itemName">{{this.name}}</h4>
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Shot History:</b> {{this.shots}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>DOB:</b> {{pet.dob}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Species (Cat, Dog):</b> {{pet.species}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Spayed/Neutered (if yes, enter date):</b> {{pet.spayed}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Gender:</b> {{pet.gender}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Breed:</b> {{pet.breed}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Color:</b> {{pet.color}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Purchase Date:</b> {{pet.purchased}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Microchip:</b> {{pet.microchip}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Weight:</b> {{pet.weight}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Veterinarian:</b> {{pet.vet}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Veterinarian Phone:</b> {{pet.vetphone}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Notes:</b> {{this.notes}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<data-id="{{this.id}}">Pet ID: {{this.id}}</span><br />
       <div>
         <br>
         <p>&nbsp; &nbsp; &nbsp; &nbsp;<button class="btn btn-warning delete_myPet" name="button" data-id="{{this.id}}">Delete</button>
         &nbsp; &nbsp;<button class="btn btn-success update-myPet" name="button" data-id="{{this.id}}">Update</button></p>
      </div>
    </td>
    <br>
  </tr>
  <tr><td> </td></tr>
  <hr class="style15"><br>

    {{/each}}
    {{else}}
    <div><h3>You have no pets to display at this time.  You may create an pet by selecting the <b>Add A Pet</b> button.</h3></div>
    {{/if}}
