
<h1 id="meds_list">My Pet's Prescriptions</h1>
<br><br><br>

{{#if meds}}

{{#each meds as |med|}}
   <tr class="item">
     <td valign="top" class="textContent">
       <!-- <img src=""{{img}}" width="50" height="75" class="itemImage"" /> -->
       <h3 class="itemName">{{this.drugname}}</h3>
       <h3 class="itemName">{{this.pet.name}}</h3>
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Dosage:</b> {{med.dosage}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Frequency:</b> {{med.frequency}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Date Prescribed:</b> {{med.dateprescribed}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<b>Notes:</b> {{this.notes}}</span><br />
       <span class="contentSecondary">&nbsp; &nbsp; &nbsp; &nbsp;<data-id="{{this.id}}">Med ID: {{this.id}}</span><br />
       <div>
         <br>
         <p>&nbsp; &nbsp; &nbsp; &nbsp;<button class="btn btn-warning delete_myMed" name="button" data-id="{{this.id}}">Delete</button>
         &nbsp; &nbsp;<button class="btn btn-success update-myMed" name="button" data-id="{{this.id}}">Update</button></p>
      </div>
    </td>
    <br>
  </tr>
  <tr><td> </td></tr>
  <hr class="style15"><br>

    {{/each}}
    {{else}}
    <div><h3>You have no meds to display at this time.  You may create an med by selecting the <b>Add A Med</b> button.</h3></div>
    {{/if}}
